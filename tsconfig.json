{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/app/*": ["./app/*"],
      "@/constants/*": ["./constants/*"],
      "@/interfaces/*": ["./interfaces/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./global.d.ts"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
